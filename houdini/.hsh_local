source ~/houdini/config
source ~/houdini/alakazam/core/functions.sh
source ~/houdini/alakazam/custom/functions.sh
export PATH=$PATH:~/houdini/alakazam/custom/Jinsku/

## Aliases ##

alias ll='ls -lahG --color=auto'
alias dog='cat'
alias rsort='sort -r'
alias cpu='top -o cpu'
alias mem='top -o rsize'
alias rdns="dig +short -x"

## Login ##

clear
setTerminalTitle $(hostname)

# Display the contents of a .motd file from the Home if they have one.
display
cat ~/houdini/version
printf "${NC}"

# Notification for upcoming changes, etc
grep -C5 --color ".*" ~/houdini/.motd-notify
echo
